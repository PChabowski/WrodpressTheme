{
	"$schema": "https://schemas.wp.org/wp/6.4/theme.json",
	"customTemplates": [
		{
			"name": "index",
			"title": "Home",
			"postTypes": [
				"page"
			]
		},
		{
			"name": "single",
			"title": "Post",
			"postTypes": [
				"page",
				"post"
			]
		}
	],
	"patterns": [],
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"color": "#333",
					"name": "Light/Black",
					"slug": "lightblack"
				},
				{
					"color": "#f2f2f2",
					"name": "Snow/White",
					"slug": "snowwhite"
				},
				{
					"color": "gray",
					"name": "Gray",
					"slug": "gray"
				}
			]
		},
		"layout": {
			"contentSize": "840px",
			"wideSize": "1100px"
		},
		"spacing": {
			"spacingScale": {
				"increment": 6,
				"mediumStep": 0.75,
				"operator": "+",
				"steps": 5,
				"unit": "px"
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--gray)"
		},
		"typography": {
			"fontFamily": "Arial",
			"fontSize": "18px"
		},
		"spacing": {
			"margin": "20px"
		},
		"blocks": {
			"core/site-title": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "22px"
				}
			},
			"core/navigation": {
				"color": {
					"text": "var(--wp--preset--color--snowwhite)"
				},
				"elements": {
					"link": {
						":hover": {
							"color": {
								"background": "var(--wp--preset--color--snowwhite)",
								"text": "var(--wp--preset--color--lightblack)!important"
							}
						}
					}
				}
				
			}
		}
	},
	"templateParts": [],
	"version": 2
}